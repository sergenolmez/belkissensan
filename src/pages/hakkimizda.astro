  <style>
    .about-page {
      font-family: var(--font-family);
    }

    /* Content Section */
    .content-section {
      background: var(--white-color);
    }

    .content-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* About Grid */
    .about-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-bottom: 6rem;
    }

    .about-card {
      background: white;
      padding: 3rem;
      border-radius: 24px;
      box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      position: relative;
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .about-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.15);
    }

    .card-icon {
      font-size: var(--font-size-4xl);
      margin-bottom: var(--spacing-lg);
      display: block;
    }

    .about-card h2 {
      font-size: var(--font-size-2xl);
      font-weight: var(--font-weight-semibold);
      color: var(--dark-color);
      margin: 0 0 var(--spacing-md) 0;
    }

    .about-card p {
      color: var(--gray-600);
      line-height: 1.6;
      margin: 0;
      font-size: var(--font-size-base);
    }

    .values-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .values-list li {
      padding: 0.5rem 0;
      color: #666;
      line-height: 1.6;
    }

    .values-list strong {
      color: var(--primary-color);
    }

    /* Experience Stats */
    .experience-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }

    .stat {
      text-align: center;
      padding: 1rem;
      background: #f8fafc;
      border-radius: 12px;
    }

    .stat-number {
      display: block;
      font-size: var(--font-size-2xl);
      font-weight: var(--font-weight-bold);
      color: var(--primary-color);
      margin-bottom: var(--spacing-xs);
    }

    .stat-label {
      font-size: var(--font-size-sm);
      color: var(--gray-600);
      font-weight: var(--font-weight-medium);
    }

    /* Team Section */
    .team-section {
      margin: 3rem 0;
    }

    .section-header {
      text-align: center;
      margin-bottom: 4rem;
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--dark-color);
      margin: 0 0 1rem 0;
    }

    .section-subtitle {
      font-size: 1.1rem;
      color: #666;
      margin: 0;
    }

    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 3rem;
    }

    .team-card {
      background: white;
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .team-card.featured {
    }

    .team-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.15);
    }

    .team-image {
      position: relative;
      height: 200px;
      background: linear-gradient(
        135deg,
        var(--primary-color),
        var(--secondary-color)
      );
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .image-placeholder {
      width: 120px;
      height: 120px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary-color);
    }

    .image-placeholder.company {
      font-size: 1rem;
      text-align: center;
      line-height: 1.2;
    }

    /* Story Section */
    .story-section {
      margin: 4rem 0;
    }

    .story-content {
      max-width: 1200px;
      margin: 0 auto;
    }

    .story-layout {
      display: grid;
      grid-template-columns: 400px 1fr;
      gap: 4rem;
      align-items: start;
    }

    /* Profile Photo Section */
    .profile-photo-section {
      position: sticky;
      top: 2rem;
    }

    .photo-container {
      position: relative;
    }

    .photo-frame {
      position: relative;
      width: 100%;
      border-radius: 24px;
      overflow: hidden;
    }

    .profile-photo {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 20px;
      transition: all 0.3s ease;
    }

    .profile-photo:hover {
      transform: scale(1.05);
    }

    .photo-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(
        to top,
