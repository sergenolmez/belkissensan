---
interface Props {
  title: string;
  text: string;
  ctaText: string;
  ctaLink: string;
  image?: string;
}
const { title, text, ctaText, ctaLink, image } = Astro.props as Props;
---
<section class="hero">
  <div class="container hero-grid">
    <div class="hero-content">
      <h1>{title}</h1>
      <p>{text}</p>
      <a href={ctaLink} class="btn-primary">{ctaText}</a>
    </div>
    {image && (
      <div class="hero-image">
        <img src={image} alt="" />
      </div>
    )}
  </div>
</section>
